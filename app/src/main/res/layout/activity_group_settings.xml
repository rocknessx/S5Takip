<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".GroupSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Grup Bilgileri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grup Bilgileri"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_group_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grup Adı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_members_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0 üye"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />

                    <Button
                        android:id="@+id/btn_share_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Davet Kodu Paylaş"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <Button
                        android:id="@+id/btn_refresh_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔄"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Grup Üyeleri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥 Grup Üyeleri"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_group_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:maxHeight="300dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Grup Silme Butonu (Sadece Grup Sahibi İçin) -->
        <Button
            android:id="@+id/btn_delete_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="🗑️ Grubu Sil"
            android:textSize="14sp"
            android:backgroundTint="#F44336"
            android:textColor="@color/white"
            android:visibility="gone" />

        <!-- Haftalık Denetmen Programı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_schedule_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Her güne bir denetmen atayın. Günlere tıklayarak denetmen seçebilirsiniz."
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_weekly_schedule_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📅 Haftalık Denetmen Programı"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_weekly_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Loading Göstergesi -->
        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>