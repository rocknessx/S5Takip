<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5S Takip Raporları"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="24dp" />

        <!-- Rapor Türü Seçimi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapor Türü"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rg_report_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅 Günlük Rapor"
                        android:textSize="14sp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📆 Haftalık Rapor"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <RadioButton
                        android:id="@+id/rb_monthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🗓️ Aylık Rapor"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarih Seçimi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapor Tarihi"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_selected_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bugün"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:background="@color/gray_light"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btn_select_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Değiştir"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rapor Önizleme -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapor Önizleme"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="12dp" />

                <!-- İstatistikler -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_preview_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toplam"
                            android:textSize="12sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_preview_resolved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_resolved" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Çözülen"
                            android:textSize="12sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_preview_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Başarı"
                            android:textSize="12sp"
                            android:textColor="@color/gray_dark" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Problem Listesi -->
                <TextView
                    android:id="@+id/tv_preview_problems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rapor oluşturmak için yukarıdaki seçenekleri ayarlayın"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:background="@color/gray_light"
                    android:padding="12dp"
                    android:maxLines="5"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Rapor Oluşturma Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_generate_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="📄 PDF Rapor Oluştur"
                android:textSize="16sp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_share_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="📤 Raporu Paylaş"
                android:textSize="16sp"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_preview_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👁️ Rapor Önizleme"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>