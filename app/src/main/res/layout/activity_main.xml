<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Üst kısım - Grup Bilgisi ve Ayarlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Grup Adı ve Ayarlar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grup Adı"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Grup Ayarları Butonu -->
                <Button
                    android:id="@+id/btn_group_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Ayarlar"
                    android:textSize="12sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hoş Geldiniz"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Bugünün Denetmeni -->
            <TextView
                android:id="@+id/tv_todays_auditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bugün Denetmen: Yükleniyor..."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_auditor_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Denetmen bilgisi"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.8"
                android:visibility="gone" />

        </LinearLayout>

        <!-- İstatistik Kartları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Toplam Problem Kartı -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_total_problems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toplam Problem"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Çözülen Problem Kartı -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_resolved_problems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/status_resolved" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Çözülen"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Çözüm Oranı Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çözüm Oranı"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark" />

                <TextView
                    android:id="@+id/tv_resolution_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="0%"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Bugünkü problemlerin çözülme oranı"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Hızlı İşlemler -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hızlı İşlemler"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="16dp" />

                <!-- Butonlar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Problem Ekle Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/add_problem"
                        android:textSize="16sp"
                        app:icon="@android:drawable/ic_menu_camera"
                        app:iconGravity="start"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Problemleri Görüntüle Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/problems"
                        android:textSize="16sp"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconGravity="start"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Rapor Oluştur Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_generate_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/reports"
                        android:textSize="16sp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="start"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Grup Sohbeti Butonu - YENİ! -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_group_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💬 Grup Sohbeti"
                        android:textSize="16sp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="start"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Kullanıcı Profili Kartı - İyileştirilmiş Tasarım -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Profil Fotoğrafı Container -->
                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp">

                    <!-- Profil Fotoğrafı -->
                    <ImageView
                        android:id="@+id/iv_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/gray_light"
                        android:visibility="visible" />

                    <!-- Avatar Harfi (fotoğraf yoksa) -->
                    <TextView
                        android:id="@+id/tv_avatar_letter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="U"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/primary"
                        android:gravity="center"
                        android:visibility="gone" />

                </FrameLayout>

                <!-- Kullanıcı Bilgileri -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kullanıcı Adı"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="user@example.com"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />

                </LinearLayout>

                <!-- Butonlar -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Profil Düzenleme Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Düzenle"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                    <!-- Çıkış Butonu -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Çıkış"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>