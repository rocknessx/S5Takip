<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".AddSolutionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Problem Bilgisi Kartı -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çözüm Eklenen Problem"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_problem_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problem açıklaması..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_problem_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 Konum"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çözüm Önerisi Ekle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="24dp" />

        <!-- Çözüm Açıklaması -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Çözüm Açıklaması"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_solution_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:maxLines="8"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="Problemi nasıl çözdünüz? Detayları açıklayın..." />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Çözüm Türü Seçimi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çözüm Durumu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_solution_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 Çözüm Önerisi (henüz uygulanmadı)"
                android:textSize="14sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_implemented"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Çözüm Uygulandı (problem çözüldü)"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

        </RadioGroup>

        <!-- Çözüm Fotoğrafı -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çözüm Fotoğrafı"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gray_medium">

            <LinearLayout
                android:id="@+id/ll_solution_photo_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_solution_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/tv_solution_photo_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çözüm Fotoğrafı Çek"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çözümün uygulandığını gösteren fotoğraf (opsiyonel)"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_solution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="İptal"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_save_solution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Çözümü Kaydet"
                android:textSize="16sp"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>