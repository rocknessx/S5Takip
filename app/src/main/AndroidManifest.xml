<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- İzinler -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Kamera özelliği -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.S5Takip"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- ✅ LoginActivity - LAUNCHER (Ana giriş) -->
        <activity
            android:name="com.fabrika.s5takip.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Group Selection Activity - Login sonrası ilk sayfa -->
        <activity
            android:name="com.fabrika.s5takip.GroupSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ✅ MainActivity - Grup seçimi sonrası ana uygulama -->
        <activity
            android:name="com.fabrika.s5takip.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Kayıt Olma Activity -->
        <activity
            android:name="com.fabrika.s5takip.RegisterActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.LoginActivity" />
        </activity>

        <!-- Grup Ayarları Activity -->
        <activity
            android:name="com.fabrika.s5takip.GroupSettingsActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- Profil Düzenleme Activity -->
        <activity
            android:name="com.fabrika.s5takip.EditProfileActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- Grup Sohbeti Activity -->
        <activity
            android:name="com.fabrika.s5takip.GroupChatActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- Fotoğraf Görüntüleme Activity -->
        <activity
            android:name="com.fabrika.s5takip.PhotoViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.ProblemDetailActivity" />
        </activity>

        <!-- Problem Ekleme Activity -->
        <activity
            android:name="com.fabrika.s5takip.AddProblemActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- Problem Listesi Activity -->
        <activity
            android:name="com.fabrika.s5takip.ProblemsListActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- Problem Detay Activity -->
        <activity
            android:name="com.fabrika.s5takip.ProblemDetailActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.ProblemsListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.ProblemsListActivity" />
        </activity>

        <!-- Çözüm Ekleme Activity -->
        <activity
            android:name="com.fabrika.s5takip.AddSolutionActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.ProblemDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.ProblemDetailActivity" />
        </activity>

        <!-- Rapor Activity -->
        <activity
            android:name="com.fabrika.s5takip.ReportActivity"
            android:exported="false"
            android:parentActivityName="com.fabrika.s5takip.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fabrika.s5takip.MainActivity" />
        </activity>

        <!-- FileProvider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>